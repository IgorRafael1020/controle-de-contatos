@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apgagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar contato (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2">
    <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
    <a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Exclusão</a>
</div>